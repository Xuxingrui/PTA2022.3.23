	char name;
	char sex;
}; stud1, stud2;

struct Student
{
private:
	int num;
	char name[20];
	char sex;
public:
	void display()
	{
		cout << "num:" << num << endl;
		cout << "name:" << name << endl;
		cout << "sex:" << sex << endl;
	}
};
Student stud1, stud2;

class Student
{
public:
	void display();
